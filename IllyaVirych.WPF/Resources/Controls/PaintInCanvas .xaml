<UserControl x:Class="IllyaVirych.WPF.Resources.Controls.PaintInCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Control ="clr-namespace:IllyaVirych.WPF.Resources.Controls"
             xmlns:local="clr-namespace:IllyaVirych.WPF.Resources.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
        <Canvas Name="paintSurface" MouseDown="Canvas_MouseDown" MouseMove="Canvas_MouseMove">
        <Control:PointFromEllipse X="600" Y="100"/>
        <Polyline x:Name="polyline" Stroke="Red" StrokeThickness="3"/>
        <Canvas.Background>
                <SolidColorBrush Color="DarkGray" Opacity="1"/>            
        </Canvas.Background>
        </Canvas>
</UserControl>
